---
import { SITE } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Socials from "@components/Socials.astro";
import Layout from "./Layout.astro";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header activeNav="about" />
  <Breadcrumbs />
  <main id="main-content">
    <section class="flex items-center prose mb-8 max-w-3xl prose-img:border-0">
      <div class="sm:w-1/3 mr-8">
        <img src="/assets/dev.png" class="w-full rounded-full" alt="coding dev illustration">
      </div>
      <div class="sm:w-2/3">
        <h1 class="text-2xl tracking-wider sm:text-3xl">{frontmatter.title}</h1>
        <p class="text-lg text-orange-500">{frontmatter.subtitle}</p>
        <p class="mt-2">{frontmatter.description}</p>
        <Socials />
      </div>
    </section>
    <section class="prose mb-8">
      <h2>Experiencia</h2>
      <ul class="list-none">
        <li>
          <h3 class="flex items-center gap-2 mb-1 text-lg font-semibold">
            Full Stack Developer         
            <span class="font-normal"></span>
            <p class="text-sm">Accesit Inclusivo</p>
          </h3>
          <time class="block mb-2 text-sm font-normal leading-none">Abril 2023 - Presente</time>
          <p class="mb-4 font-normal text-base text-pretty">
            Creación de nuevos servicios, rediseño y modificación de funcionalidades de accesibilidad e implementacion de las páginas para que sigan los estandares de accesibilidad.
          </p>

        <li>
          <h3 class="flex items-center gap-2 mb-1 text-lg font-semibold">
            Junior Developer        
            <span class="font-normal"></span>
            <p class="text-sm">Bit2Me</p>
          </h3>
          <time class="block mb-2 text-sm font-normal leading-none">Agosto 2020 - Enero 2023</time>
          <p class="mb-4 font-normal text-base text-pretty">
            Trabajo en equipos multidisciplinares para la creación y mejora de servicios para convertir a Bit2me en el exchange referente de España.
          </p>
        </li>
      </ul>
    </section>
    <section class="prose container mx-auto px-2 lg:w-[740px]">
      <h2>Tecnologías</h2>
      <section class="grid lg:grid-cols-2 lg:grid-rows-2 gap-6 lg:place-content-center mb-8">
        <article class="relative rounded-2xl p-6 dark:border">
          <h3 class="text-center mb-8 text-xl font-bold lg:text-4xl lg:break-words bg-gradient-to-t">Frontend</h3>
          <ul class="grid grid-cols-3 gap-4">
            <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
              <span>Angular</span>
            </li>
            <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
              <span>TailwindCSS</span>
            </li>
            <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
              <span>SASS</span>
            </li>
            <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
              <span>Bootstrap</span>
            </li>
            <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
              <span>Cypress</span>
            </li>
            <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
              <span>Figma</span>
            </li>
          </ul>
        </article>
        <article class="relative rounded-2xl p-6 dark:border">
            <h3 class="text-center mb-8 text-xl font-bold lg:text-4xl lg:break-words bg-gradient-to-t">Backend</h3>
            <ul class="grid grid-cols-3 gap-4">
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>Express.js</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>Nest.js</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>MongoDB</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>PostgreSQL</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>Docker</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>Jest</span>
              </li>
            </ul>
        </article>
        <article class="relative rounded-2xl p-6 dark:border">
            <h3 class="text-center mb-8 text-xl font-bold lg:text-4xl lg:break-words bg-gradient-to-t">Aprendiendo</h3>
            <ul class="grid grid-cols-3 gap-4">
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>AWS</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>Design Systems</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>LangChain</span>
              </li>
            </ul>
        </article>
        <article class="relative rounded-2xl p-6 dark:border">
            <h3 class="text-center mb-8 text-xl font-bold lg:text-4xl lg:break-words bg-gradient-to-t">Herramientas</h3>
            <ul class="grid grid-cols-3 gap-4">
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>Git</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>VSCode</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>ChatGPT</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>Notion</span>
              </li>
              <li class=" rounded-2xl  group flex flex-col fle justify-center items-center">
                <span>Canva</span>
              </li>
            </ul>
        </article>
      </section>
    </section>
  </main>
  <Footer />
</Layout>
